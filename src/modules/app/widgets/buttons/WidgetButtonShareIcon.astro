---
const { link } = Astro.props;
const urlLink = link.value+'/'+link.username;
---

<a href={urlLink} class="widget-button-share">
  	<span class="icon icon-left">
  		  <iconify-icon icon={link.icon} class="iconify"></iconify-icon>
  	</span>
  	<span class="text">
  		Compartir en {link.name}
  	</span>
  	<span class="icon">
  		  <iconify-icon icon="weui:arrow-filled" class="iconify"></iconify-icon>
  	</span>
</a>

<style>
 .widget-button-share {
    display: flex;
    align-items: center;
    justify-content: space-between;  
    background: var(--clr-5);
    color: white;
    border-radius: 40px;
    text-decoration: none; 
    line-height: 40px;
    padding: 0.5rem;
    min-height: 40px;
}

.widget-button-share:hover {
  background: var(--clr-3);
}

.widget-button-share .icon-left {
  flex-shrink: 0;  
  line-height: 40px;
}

.widget-button-share .image {
  width: 50px;  
  height: 50px;  
  border-radius: 50%;  
  object-fit: cover;  
}

.widget-button-share   .text {
  flex: 1;  
  text-align: left; 
  font-size: 1rem;
}

.widget-button-share  .icon {
  flex-shrink: 0;  
  margin-left: 10px;  
  font-size: 2rem!important;
  margin:0 1rem;
}


</style>