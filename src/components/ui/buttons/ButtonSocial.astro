---
const { link} = Astro.props;
const urlLink = link.value+'/'+link.username;
---

<a href={urlLink} class="button__social button-rounded">
  	<span class="avatar">
  		<img src="holder.js/50x50" alt="" class="image-rounded">
  	</span>
  	<span class="text">
  		{link.name}
  	</span>
  	<span class="icon">
  		<iconify-icon icon="weui:arrow-filled"></iconify-icon>
  	</span>
</a>

<style>
	.button__social {
  display: flex;
  align-items: center;
  justify-content: space-between;  
  background: var(--clr-5);
  color: white;
 
  text-decoration: none; 
}

.button__social:hover {
  background: var(--clr-3);
}

.avatar {
  flex-shrink: 0;  
  margin-right: 10px; 
  padding:0.1rem 1rem;
}

.image-rounded {
  width: 50px;  
  height: 50px;  
  border-radius: 50%;  
  object-fit: cover;  
}

.text {
  flex: 1;  
  text-align: center; 
  font-size: var(--fs-6);
}

.icon {
  flex-shrink: 0;  
  margin-left: 10px;  
  font-size: var(--fs-2);
  margin:0 1rem;
}
</style>